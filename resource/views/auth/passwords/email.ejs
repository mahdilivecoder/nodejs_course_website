

<div class="row pt-3 justify-content-center">
    <div class="col-8">
        <div class="card card-default">
            <div class="card-header"><h5>فراموشی رمز عبور</h5></div>
            <div class="card-body">
                <form class="form-horizontal" role="form" method="POST" action="/auth/passwords/email" novalidate>

                    <%-include('./../../layout/error-messages')-%>


                    <div class="form-group">
                        <label for="email" class="control-label">آدرس ایمیل</label>
                        <input id="email" type="email" class="form-control" name="email" value="" required>
                    </div>


                    <div class="form-group">
                        <%-recaptcha%>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            بازیابی رمز عبور
                        </button>
                </form>
            </div>
        </div>
    </div>
</div>